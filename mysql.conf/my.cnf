[client]
port = 3306
socket = /var/lib/mysql/mysql.sock
[mysqld]
port = 3306
socket = /var/lib/mysql/mysql.sock
# grant tables must be IP addresses
skip-name-resolve
skip-external-locking
# default time zone
default-time-zone = '+08:00'
# From cat /proc/sys/net/ipv4/tcp_max_syn_backlog
back_log = 4096
max_connections = 1200
max_connect_errors = 1000
table_open_cache = 1024
max_allowed_packet = 32M
binlog_cache_size = 10M
max_heap_table_size = 64M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
sort_buffer_size = 32M
join_buffer_size = 64M
thread_cache_size = 128
query_cache_size = 64M
query_cache_limit = 1M
ft_min_word_len = 4
explicit_defaults_for_timestamp = true
default-storage-engine = InnoDB
thread_stack = 192K
transaction_isolation = REPEATABLE-READ
tmp_table_size = 64M
log-bin = mysql-bin
binlog_format = row
server-id = 1
# bin log expire day
expire_logs_days = 7
# every transaction refresh to disk
sync_binlog = 1
key_buffer_size = 256M
bulk_insert_buffer_size = 64M

sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
# innodb config
# innodb_buffer_pool_size
# + key_buffer_size
# + max_connections*(sort_buffer_size+read_buffer_size+binlog_cache_size)
# + max_connections*2MB
innodb_buffer_pool_size = 2G
# this option takes effect only when innodb_buffer_pool_size >= 1GB
innodb_buffer_pool_instances = 2
# max depends on the maximum file size of the operating system
innodb_data_file_path = ibdata1:50M:autoextend:max:1G
# 1 is transaction safe
innodb_flush_log_at_trx_commit = 1
innodb_log_buffer_size = 32M
# innodb_log_file_size * innodb_log_files_in_group < 521G
innodb_log_file_size = 1G
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 60
# 5.7 default is Barracuda, The previous default value was Antelope
#innodb_file_format = Barracuda
# slow query log
long_query_time = 1
slow_query_log = 1
slow_query_log_file = /var/log/mysql-slow.log
event_scheduler = 1
[mysqldump]
quick
max_allowed_packet = 16M
[mysql]
no-auto-rehash
[myisamchk]
key_buffer_size = 256M
sort_buffer_size = 256M
read_buffer = 8M
write_buffer = 8M
[mysqlhotcopy]
interactive-timeout
[mysqld_safe]
open-files-limit = 51200
log-error = /var/log/mysql-error.log
